<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#c868c4c6"
    android:backgroundTintMode="screen">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="Policy Number:"
        android:textColor="#312d2d"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/policyNbr"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textView1"
        android:background="@drawable/inputboxwithborders"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/policyNbr"
        android:layout_marginTop="25dp"
        android:text="First Name:"
        android:textColor="#312d2d"
        android:textSize="18sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/policyNbr"
        android:layout_alignTop="@+id/textView2"
        android:background="@drawable/inputboxwithborders"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/firstName"
        android:layout_marginTop="33dp"
        android:text="Last Name:"
        android:textColor="#312d2d"
        android:textSize="18sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="215dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/firstName"
        android:background="@drawable/inputboxwithborders"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_alignEnd="@+id/textView3"
        android:text="Age:"
        android:textColor="#312d2d"
        android:textSize="18sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/age"
        android:layout_width="60dp"
        android:layout_height="41dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView1"
        android:background="@drawable/inputboxwithborders"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/age"
        android:text="Sex:"
        android:textColor="#312d2d"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="60dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/height"
        android:layout_alignTop="@+id/age"
        android:background="@drawable/spinnerwithborder" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/age"
        android:layout_marginTop="35dp"
        android:text="Weight:"
        android:textColor="#312d2d"
        android:textSize="18sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="60dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignStart="@+id/age"
        android:background="@drawable/inputboxwithborders"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weight"
        android:layout_alignStart="@+id/textView5"
        android:text="Height:"
        android:textColor="#312d2d"
        android:textSize="18sp"
        android:textStyle="normal" />


    <EditText
        android:id="@+id/height"
        android:layout_width="60dp"
        android:layout_height="41dp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/firstName"
        android:background="@drawable/inputboxwithborders"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:layout_below="@+id/height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:background="@drawable/inputboxwithborders"
        android:ems="10"
        android:inputType="text"
        android:text="Doctor's Note" />

    <Button
        android:id="@+id/button2"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/height"
        android:backgroundTint="#2598e2"
        android:onClick="addPatientDetails"
        android:text="Add New Patient Record" />
</RelativeLayout>